{
  "manifest_version": 2,
  "name": "AI to Slop Replacer",
  "version": "1.3.1",
  "description": "A silly extension that replaces all textual occurences of 'AI' with 'Slop' on web pages!",
  
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "icons": {
    "64": "icon.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["aitoslop.js"],
      "run_at": "document_end"
    }
  ]
}
